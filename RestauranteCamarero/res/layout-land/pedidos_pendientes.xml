<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3" >

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/resumen_color"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/pedidosPendientes"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/acciones_color"
        android:orientation="vertical"
        android:weightSum="5" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@drawable/acciones_color" >

            <TextView
                android:id="@+id/total"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="2"
                android:background="#000000"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" >
            </TextView>

            <Button
                android:id="@+id/x"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="2"
                android:background="#FFFFFF"
                android:text="X" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@drawable/acciones_color"
            android:weightSum="4" >

            <Button
                android:id="@+id/c7"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="7" />

            <Button
                android:id="@+id/c8"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="8" />

            <Button
                android:id="@+id/c9"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="9" />

            <Button
                android:id="@+id/cambiar"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="Cambiar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@drawable/acciones_color" >

            <Button
                android:id="@+id/c6"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="6" />

            <Button
                android:id="@+id/c5"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="5" />

            <Button
                android:id="@+id/c4"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="4" />

            <Button
                android:id="@+id/mas"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@drawable/acciones_color" >

            <Button
                android:id="@+id/c1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="1" />

            <Button
                android:id="@+id/c2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="2" />

            <Button
                android:id="@+id/c3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="3" />

            <Button
                android:id="@+id/menos"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@drawable/acciones_color" >

            <Button
                android:id="@+id/c0"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="2"
                android:background="#FFFFFF"
                android:text="0" />

            <Button
                android:id="@+id/ce"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="2"
                android:background="#FFFFFF"
                android:text="CE" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>